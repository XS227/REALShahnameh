# Telegram bot token obtained from BotFather.
# If you only run the HTTP API you may set a placeholder value here.
BOT_TOKEN=your-telegram-bot-token

# Database connection string (defaults to SQLite database in data/bot.db)
DATABASE_URL=sqlite:///data/bot.db

# REAL API configuration
# Set to "mock" to use the built-in mock client or "production" to hit the REAL API
REAL_MODE=mock
REAL_API_BASE_URL=https://api.real-token.example
REAL_API_KEY=
REAL_API_SECRET=
REAL_RATE_LIMIT_PER_MINUTE=60
REAL_MOCK_MAX_AMOUNT=1000

# Comma-separated list of Telegram user IDs with admin access
ADMIN_USER_IDS=
